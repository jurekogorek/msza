<%= form_for(@grupa) do |f| %>
  <% if @grupa.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@grupa.errors.count, t(:error)) %></h2>

      <ul>
      <% @grupa.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
    <%= f.label :avatar%>
    <%= f.file_field :avatar %>
  </div>
  <div class="field">
    <%= f.label :nazwa %><br />
    <%= f.text_field :nazwa %>
  </div>

  <div class="field">
    <%= f.label :opis %><br />
    <%= f.text_area :opis %>
  </div>




  <div class="actions">
    <%= f.submit "Zapisz" %>
  </div>
<% end %>
